{
    "version": "2.1.3",
    "description": "Tarayıcı yok, reklam yok. Sadece sen ve anime.",
    "homepage": "https://github.com/ewgsta/weeb-cli",
    "license": "CC-BY-NC-ND-4.0",
    "depends": "python",
    "installer": {
        "script": [
            "pip install weeb-cli==2.1.3",
            "echo 'weeb-cli kuruldu. Kullanım: weeb-cli'"
        ]
    },
    "uninstaller": {
        "script": "pip uninstall -y weeb-cli"
    },
    "bin": "weeb-cli",
    "checkver": {
        "url": "https://pypi.org/pypi/weeb-cli/json",
        "jsonpath": "$.info.version"
    },
    "autoupdate": {
        "installer": {
            "script": [
                "pip install weeb-cli==$version",
                "echo 'weeb-cli güncellendi. Kullanım: weeb-cli'"
            ]
        }
    }
}